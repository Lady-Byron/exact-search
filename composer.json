{
  "name": "lady-byron/exact-search",
  "type": "flarum-extension",
  "description": "Force exact search for Meilisearch (companion to clarkwinkelmann/flarum-ext-scout).",
  "license": "MIT",
  "require": {
    "flarum/core": "^1.8",
    "clarkwinkelmann/flarum-ext-scout": "*"
  },
  "autoload": {
    "psr-4": {
      "LadyByron\\ExactSearch\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Exact Search",
      "category": "search",
      "icon": {
        "name": "fas fa-bullseye",
        "backgroundColor": "#2f855a",
        "color": "#ffffff"
      }
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
